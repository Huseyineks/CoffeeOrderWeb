@model Menu

<form method="POST" enctype="multipart/form-data">
    <div class="container col-6">
        <fieldset>

            <h1>Edit Menu</h1>
            <div asp-validation-summary="All" class="text-danger"></div>


            <div>
                <label for="newMenu_ProductName" class="form-label mt-4">Product Name</label>
                <input type="text" class="form-control" id="newMenu_ProductName" placeholder="Enter a product name" asp-for="ProductName">
            </div>
            <div>
                <label for="newMenu_ProductContent" class="form-label mt-4">Product Content</label>
                <input type="text" class="form-control" id="newMenu_ProductContent" placeholder="Enter product content" asp-for="ProductContent">
            </div>
            <div>
                <label for="newMenu_ProductPrice" class="form-label mt-4">Product Price</label>
                <input type="text" class="form-control" id="newMenu_ProductPrice" placeholder="$" asp-for="ProductPrice">
            </div>
            <div class="form-group col-3">
                <label for="newMenu_ProductImage">Image</label>
                <input class="form-control" id="newMenu_ProductImage" asp-for="ProductImage">
            </div>
            


            <br />
            <input type="hidden" asp-for="MenuId">
            <button type="submit" class="btn btn-success">Edit</button>
        </fieldset>

    </div>

</form>