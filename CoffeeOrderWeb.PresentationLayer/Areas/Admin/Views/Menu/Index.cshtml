@model MenuViewModel

<div class="row p-4">
@foreach (var menu in Model.menus)
{
   
        <div class="col-3">
            <div class="card mb-3">
                <h3 class="card-header">@menu.ProductName</h3>
                <figure class="mb-4"><img class="img-fluid rounded" src="~/Images/@menu.ProductImage" alt="..."></figure>
                <div class="card-body">
                    <p class="card-text">@menu.ProductContent </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@menu.ProductPrice$</li>
                    
                </ul>
            </div>
        </div>
    
}
</div>


