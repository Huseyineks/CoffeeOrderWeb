@model MenuViewModel

<div class="row p-4">
    @foreach (var menu in Model.menus)
    {

        <div class="col-3">
            <div class="card mb-3">
                <h3 class="card-header">@menu.ProductName</h3>
                <figure class="mb-4"><img class="img-fluid rounded" src="~/Images/@menu.ProductImage" alt="..." style="height:300px; width:500px"></figure>
                <div class="card-body">
                    <p class="card-text">@menu.ProductContent </p>
                </div>
                <ul class="list-group list-group-flush">

          
                    <li class="list-group-item p-0" style="display:flex; justify-content:space-between; align-items:center">
                        <div><h3>@menu.ProductPrice$</h3></div>
                       
                        <button type="button" class="btn btn-success" data-menuid ="@menu.MenuId" id="ModalButton-@menu.MenuId"  onclick="openModal('@menu.MenuId')">
                            Add
                        </button>
                    </li>

                </ul>

            </div>
        </div>

    }
 

</div>




<div class="modal" id="Modal1" style="display:none">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <img class="img-fluid rounded" src="~/Images/3feb42e2-f309-48e3-8808-12d4029c4abf-ben.jpeg" alt="..." style="height:500px; width:100%">
            <form method="post" style="padding:10px">
                <fieldset>

                    <fieldset>
                        <legend class="mt-4">Size</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.Size" id="SizeOptions-Large" value="Large">
                            <label class="form-check-label" for="SizeOptions-Large">
                                Large
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.Size" id="SizeOptions-Medium" value="Medium">
                            <label class="form-check-label" for="SizeOptions-Medium">
                               Medium
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.Size" id="SizeOptions-Small" value="Small">
                            <label class="form-check-label" for="SizeOptions-Small">
                               Small
                            </label>
                        </div>


                    </fieldset>

                    <fieldset>
                        <legend class="mt-4">Drink</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.ColdOrHot" id="DrinkOptions-Iced" value="Iced">
                            <label class="form-check-label" for="DrinkOptions-Iced">
                                Iced 
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.ColdOrHot" id="DrinkOptions-Normal" value="Normal">
                            <label class="form-check-label" for="DrinkOptions-Normal">
                                Normal
                            </label>
                        </div>
                        
                    </fieldset>
                    <fieldset>
                        <legend class="mt-4">Would you like more caffein ?</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.MoreCaffein" id="CaffeinOptions-Yes" value="Yes">
                            <label class="form-check-label" for="CaffeinOptions-No">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="orderDetails.MoreCaffein" id="CaffeinOptions-No" value="No">
                            <label class="form-check-label" for="CaffeinOptions-No">
                                No
                            </label>
                        </div>

                    </fieldset>

                    <div>
                        <label for="Note" class="form-label mt-4">Note</label>
                        <textarea class="form-control" id="Note" rows="3" asp-for="orderDetails.Note" placeholder="Is there anything we need to know ?"></textarea>
                    </div>


                    <input type="hidden" id="MenuIdInput" asp-for="orderDetails.OrderId" />

                    <button type="submit" class="btn btn-primary" id ="modalButton">Add</button>
                </fieldset>
            </form>
            <button type="button" class="close" onclick="closeModal()">Kapan</button>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/MyScript.js"></script>

