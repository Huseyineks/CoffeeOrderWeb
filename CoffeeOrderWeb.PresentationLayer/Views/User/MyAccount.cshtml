@model UserInformationDTO

<div class="container">
    <form method="post">
        <fieldset>
            <h1>Your User Informations</h1>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label for="Name" class="form-label mt-4">Your Name</label>
                <input type="text" class="form-control" id="Name" placeholder="Enter your name" asp-for="Name">

            </div>
            <div>
                <label for="LastName" class="form-label mt-4">Your Lastname</label>
                <input type="text" class="form-control" id="LastName" placeholder="Enter your lastname" asp-for="LastName">

            </div>
            <div>
                <label for="Username" class="form-label mt-4">Username</label>
                <input type="text" class="form-control" id="Username" placeholder="Enter your username" asp-for="UserName">

            </div>
            <div>
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email" asp-for="Email">

            </div>
            <div>
                <label for="Password" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="Password" placeholder="Enter your password" asp-for="Password">

            </div>
            <div>
                <label for="confirmPassword" class="form-label mt-4">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPasssword" placeholder="Confirm your password" asp-for="confirmPassword">

            </div>

            <div>
                <label for="currentPassword" class="form-label mt-4">Current Password</label>
                <input type="password" class="form-control" id="currentPasssword" asp-for="currentPassword">

            </div>
            <div>
                <label for="City" class="form-label mt-4">City</label>
                <input type="text" class="form-control" id="City" placeholder="Enter your city" asp-for="City">

            </div>
            <div>
                <label for="Region" class="form-label mt-4">Region</label>
                <input type="text" class="form-control" id="Region" placeholder="Enter your region" asp-for="Region">

            </div>

            <div>
                <label for="Code" class="form-label mt-4">Postal Code</label>
                <input type="text" class="form-control" id="Code" placeholder="Enter postal code" asp-for="PostalCode">

            </div>

            <div>
                <label for="Adress" class="form-label mt-4">Adress</label>
                <textarea class="form-control" id="Adress" rows="3" asp-for="FullAdress"></textarea>
            </div>

            <br />
            <button type="submit" class="btn btn-success">Save</button>
        </fieldset>
    </form>
</div>